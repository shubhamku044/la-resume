generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(cuid())
  clerk_id   String   @unique
  email      String   @unique
  first_name String?
  last_name  String?
  avatar_url String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("users")
}
